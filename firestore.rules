rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    
    // PRODUCTS COLLECTION (Public products)
 
    match /products/{productId} {
      // Authenticated users can read all products (hem tek doküman hem collection query)
      allow read: if isAuthenticated();
      
      // Authenticated users can create products
      allow create: if isAuthenticated() 
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.createdAt is timestamp;
      
      // Only the creator can update their own product
      allow update: if isAuthenticated() 
        && resource.data.createdBy == request.auth.uid;
      
      // Only the creator can delete their own product
      allow delete: if isAuthenticated() 
        && resource.data.createdBy == request.auth.uid;
    }
    
    // Collection query için de izin ver (orderBy ile sorgular için)
    match /products {
      allow read: if isAuthenticated();
    }
    
    // USERS COLLECTION (User-specific data)
    match /users/{userId} {
      // Users can only access their own user document
      allow read, write: if isOwner(userId);
      
      // FAVORITES SUBCOLLECTION
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }

      // DISLIKES SUBCOLLECTION
      match /dislikes/{dislikeId} {
        allow read, write: if isOwner(userId);
      }

      // CART SUBCOLLECTION
      match /cart/{cartItemId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
        allow list: if isOwner(userId); // Collection query'ler için
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}






